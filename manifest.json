{
  "manifest_version": 3,
  "name": "LinkOff - Filter and Customizer for LinkedInâ„¢",
  "short_name": "LinkOff",
  "author": "Noah Jelich",
  "version": "1.6.1",
  "description": "LinkOff cleans and customizes LinkedIn. It filters out the junk, leaving behind the posts and page elements that you want to see.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "service_worker.js",
    "scripts": [
      "service_worker.js"
    ],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/forbidden.svg"
      ],
      "matches": [
        "https://www.linkedin.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "permissions": [
    "storage"
  ]
}
